  "license": "SEE LICENSE IN LICENSE",
  "config": {
    "gitbook": "3.2.3"
  },
  "scripts": {
    "install": "gitbook install --gitbook=$npm_package_config_gitbook",
    "build": "gitbook build --gitbook=$npm_package_config_gitbook",
    "lint": "prettier --list-different \"**/*.md\"",
    "lint-fix": "prettier --write \"**/*.md\"",
    "test": "blcl -re ./_book",
    "serve": "gitbook serve --gitbook=$npm_package_config_gitbook"
  },
  "dependencies": {
    "gitbook-cli": "^2.3.2",
    "highlight.js": "^9.12.0",
    "html-escape": "^2.0.0"
  },
  "devDependencies": {
    "broken-link-checker-local": "^0.2.0",
    "chokidar-cli": "^1.2.0",
    "prettier": "^1.14.2"
  },
  "prettier": {
    "printWidth": 80,
    "proseWrap": "always"
  }
}
